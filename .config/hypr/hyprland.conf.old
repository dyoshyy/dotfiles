
# --- 自動起動するアプリケーション ---
# 壁紙、ステータスバー、認証エージェントなどを起動します。
exec-once = waybar
exec-once = /usr/lib/polkit-kde-authentication-agent-1

# --- 基本的な環境変数 ---
env = XCURSOR_THEME,breeze_cursors
env = QT_QPA_PLATFORMTHEME,qt5ct

# --- 入力設定 ---
input {
    kb_layout = us
    follow_mouse = 1
    natural_scroll = yes
}

# --- ウィンドウの見た目 ---
general {
    gaps_in = 5
    gaps_out = 5
    border_size = 2
    col.active_border = rgba(cba6f7aa) rgba(89b4faaa) 45deg
    col.inactive_border = rgba(45475aaa)
}

decoration {
    rounding = 5
}

# --- キーボードショートカット (重要) ---
$mainMod = SUPER # Superキー(Windowsキー)をメインの修飾キーに設定

# ターミナルを開く
bind = $mainMod, RETURN, exec, konsole # KDEのKonsoleを起動。alacrittyなどに変更可能

# アプリケーションを閉じる
bind = $mainMod, Q, killactive, 

# Hyprlandセッションを終了する
bind = $mainMod SHIFT, E, exit, 

# アプリケーションランチャー(rofi)を起動する
bind = $mainMod, D, exec, rofi -show drun

# ウィンドウの移動
bind = $mainMod SHIFT, H, movewindow, l
bind = $mainMod SHIFT, L, movewindow, r
bind = $mainMod SHIFT, K, movewindow, u
bind = $mainMod SHIFT, J, movewindow, d

# ワークスペースの移動
bind = $mainMod, 1, workspace, 1
bind = $mainMod, 2, workspace, 2
bind = $mainMod, 3, workspace, 3

# アクティブなウィンドウをワークスペースに移動
bind = $mainMod SHIFT, 1, movetoworkspace, 1
bind = $mainMod SHIFT, 2, movetoworkspace, 2
bind = $mainMod SHIFT, 3, movetoworkspace, 3


monitor=eDP-1, 1920x1200@60hz, 0x0, 1 
monitor=DP-1, 3840x2160, 1920x0 , 1.5

# #######################################################################################
# # 日本語入力 (Fcitx5) 関連の設定
# #######################################################################################

# --- 環境変数の設定 ---
# アプリケーションに日本語入力の存在を知らせるための変数
env = GTK_IM_MODULE,fcitx
env = QT_IM_MODULE,fcitx
env = XMODIFIERS,@im=fcitx

# --- Fcitx5の自動起動 ---
# Hyprland起動時に、Fcitx5をバックグラウンドで一度だけ実行する
exec-once = fcitx5 -d

